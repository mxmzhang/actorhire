<!DOCTYPE html>
<html>
    {{>head}}
    <body>
        {{>navbar}}
        <div class="d-flex flex-column vh-100 align-items-center justify-content-center text-center">
            <form action="hire-response-two" method="POST">
                <input type="hidden" id="actorid" name="actorid" value="{{actor.id}}" />
                <div class="form-group">
                    <label>Time</label>
                    {{#each actor.timeArr}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="{{this}}" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                {{this}}
                            </label>
                        </div>
                    {{/each}}
                </div>
                <div class="form-group">
                    <label for="request">Request</label>
                    <textarea name="request" class="form-control" id="request" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </body>
</html>